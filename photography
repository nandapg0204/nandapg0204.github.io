   <script>






    $(document).ready(function() {
    var menuItems = $('.menu a'); // Get all the menu items
    
    // Function to check which section is in view and add the 'active-menu-item' class
    function makeActive() {
        // Get current scroll position plus some offset
        var currentScroll = $(window).scrollTop() + 50; // Adjust the 50px offset as needed

        // Loop through section links
        menuItems.each(function() {
            var section = $($(this).attr('href'));
            var sectionTop = section.offset().top;
            var sectionHeight = section.outerHeight();
            if (sectionTop <= currentScroll && (sectionTop + sectionHeight) > currentScroll) {
                menuItems.removeClass('active-menu-item');
                $(this).addClass('active-menu-item');
            }
        });
    }

    // Initial call
    makeActive();

    // Call makeActive function when user scrolls
    $(window).scroll(function() {
        makeActive();
    });
});

document.getElementById("scrollToTopBtn").addEventListener("click", function() {
    window.scrollTo({
        top: 0,
        behavior: "smooth"
    });
});

$(document).ready(function() {
    // Function to create the masonry grid
    function createMasonryGrid() {
        var $container = $('.photography');
        $container.masonry({
            itemSelector: '.image-item',
            columnWidth: '.image-item',
            gutter: 20,
        });
    }

    // Call the function after all images are loaded
    $(window).on('load', function() {
        createMasonryGrid();
    });
});


let exifData = {};

fetch('selected_exif_data.json')
    .then(response => response.json())
    .then(data => {
        exifData = data;
    })
    .catch(error => console.error('Error fetching EXIF data:', error));


    document.addEventListener('DOMContentLoaded', function () {
    const images = document.querySelectorAll('.image-item');
    const modalContainer = document.querySelector('.modal-container');
    const fullSizeImage = document.querySelector('.full-size-image');
    const imageTitle = document.querySelector('.image-title');
    const imageDescription = document.querySelector('.image-description');
    const imageExif = document.querySelector('.image-exif');
    const closeModal = document.querySelector('.close-modalg');

    function formatExifValue(value) {
        const parts = value.split('/');
        return parts.length === 2 ? (parseInt(parts[0]) / parseInt(parts[1])).toFixed(2) : value;
    }

    images.forEach(image => {
        image.addEventListener('click', function () {
            const imageName = image.getAttribute('data-full-size').split('/').pop();
            const title = image.getAttribute('data-title');
            const description = image.getAttribute('data-description');
            const exif = exifData[imageName];

            fullSizeImage.src = image.getAttribute('data-full-size');
            imageTitle.textContent = title;
            imageDescription.textContent = description;

            if (exif) {
                imageExif.innerHTML = `
                    <p>Make: ${exif.Make}</p>
                    <p>Model: ${exif.Model}</p>
                    <p>Focal Length: ${formatExifValue(exif.FocalLength)}mm</p>
                    <p>F Stop: ${formatExifValue(exif.FNumber)}</p>
                    <p>ISO: ${exif.ISOSpeedRatings}</p>
                    <p>Exposure: ${exif.ExposureMode === 0 ? 'Auto' : exif.ExposureMode}</p>
                `;
            } else {
                imageExif.textContent = 'EXIF data not available';
            }

            modalContainer.style.display = 'flex';
        });
    });

    closeModal.addEventListener('click', () => modalContainer.style.display = 'none');
    modalContainer.addEventListener('click', event => {
        if (event.target === modalContainer) {
            modalContainer.style.display = 'none';
        }
    });
});


let slides = document.querySelectorAll('.slide');
let currentSlide = 0;

function nextSlide() {
    // Remove classes from all slides
    slides.forEach((slide) => {
        slide.classList.remove('slide-active', 'slide-exit');
    });

    // Add 'slide-exit' to the current slide
    slides[currentSlide].classList.add('slide-exit');

    // Calculate the next slide index
    let nextSlideIndex = (currentSlide + 1) % slides.length;

    // Timeout to remove 'slide-exit' and add 'slide-active' to the next slide
    // Allows for the exit animation of the current slide to complete
    setTimeout(() => {
        slides[currentSlide].classList.remove('slide-exit');
        slides[nextSlideIndex].classList.add('slide-active');
    }, 1000); // The timeout should match the transition duration in CSS

    // Update the current slide index
    currentSlide = nextSlideIndex;
}


// Start the slideshow
function startSlideshow() {
    // Initially, make the first slide visible
    slides[currentSlide].classList.add('slide-active');
    
    // Set an interval to go to the next slide every 5 seconds
    setInterval(nextSlide, 7000);
}

// Start the slideshow when the DOM is fully loaded
document.addEventListener('DOMContentLoaded', startSlideshow);

function openModal(modalId) {
    var modal = document.getElementById(modalId);
    modal.style.display = 'flex'; // Show the modal
}

window.onclick = function(event) {
    if (event.target.classList.contains('skill-modal')) {
        event.target.style.display = 'none'; // Hide the modal
    }
};





document.addEventListener('scroll', function() {
    var aboutMeSection = document.getElementById('About-me');
    var image = aboutMeSection.querySelector('.profile-image');

    var sectionPos = aboutMeSection.getBoundingClientRect().top;
    var screenPos = window.innerHeight / 2;

    if (sectionPos < screenPos) {
        // When the section is in the viewport, scale the image
        image.style.transform = 'scale(1.0)';
    } else {
        // When the section is not in the viewport, reset the scale
        image.style.transform = 'scale(0.8)';
    }
});



document.addEventListener('DOMContentLoaded', function() {
    let ticking = false;
    const menu = document.querySelector('.menu');

    function syncHorizontalScroll() {
        const totalScrollHeight = document.body.scrollHeight - window.innerHeight;
        const scrollY = window.scrollY;
        const maxScrollLeft = menu.scrollWidth - menu.clientWidth;

        const scrollX = (scrollY / totalScrollHeight) * maxScrollLeft;
        menu.scrollLeft = scrollX;
    }

    window.addEventListener('scroll', function() {
        if (!ticking) {
            window.requestAnimationFrame(function() {
                syncHorizontalScroll();
                ticking = false;
            });

            ticking = true;
        }
    });
});

document.addEventListener('DOMContentLoaded', function() {
    var mouseTimeout;
    var scrollToTopBtn = document.getElementById('scrollToTopBtn');

    // Initially hide the button
    scrollToTopBtn.style.display = 'none';

    // Function to show the button
    function showScrollToTopButton() {
        scrollToTopBtn.style.display = 'block'; // Show the button
        // Clear any existing timeout
        clearTimeout(mouseTimeout);
        // Set a new timeout to hide the button after 3 seconds
        mouseTimeout = setTimeout(function() {
            scrollToTopBtn.style.display = 'none';
        }, 5000); // 3000 milliseconds = 3 seconds
    }

    // Event listener for mouse movement
    document.addEventListener('mousemove', function() {
        showScrollToTopButton();
    });
});

document.addEventListener("DOMContentLoaded", function() {
    var observer = new IntersectionObserver(function(entries) {
        entries.forEach(entry => {
            if(entry.isIntersecting) {
                entry.target.classList.add('slide-up');
            } else {
                entry.target.classList.remove('slide-up');
            }
        });
    }, {
        threshold: 0.0 // Adjust this value based on when you want the animation to trigger
    });

    document.querySelectorAll('.about-me-content h1, .about-me-content h2, .photography, .section-title, #Gallery, .lets-talk-section, .punchline-content h1,.punchline-content h3  ').forEach(el => observer.observe(el));
});

document.addEventListener("DOMContentLoaded", function() {
    var preloader = document.getElementById('preloader');
    var loadingBar = document.getElementById('loadingBar');

    function updateLoadingBar(totalMedia, loadedMedia) {
        var percentage = (loadedMedia / totalMedia) * 100;
        loadingBar.style.width = percentage + '%';

        if (loadedMedia >= totalMedia) {
            setTimeout(() => { preloader.style.display = 'none'; }, 500); // Adds a slight delay for a smoother transition
        }
    }

    function checkMedia() {
        var images = Array.from(document.images);
        var videos = Array.from(document.getElementsByTagName('video'));
        var totalMedia = images.length + videos.length;
        var loadedMedia = 0;

        images.forEach(img => {
            if (img.complete) {
                loadedMedia++;
            } else {
                img.onload = img.onerror = function() {
                    loadedMedia++;
                    updateLoadingBar(totalMedia, loadedMedia);
                };
            }
        });

        videos.forEach(video => {
            if (video.readyState > 3) {
                loadedMedia++;
            } else {
                video.onloadeddata = function() {
                    loadedMedia++;
                    updateLoadingBar(totalMedia, loadedMedia);
                };
            }
        });

        // Initial check if all media are already loaded
        updateLoadingBar(totalMedia, loadedMedia);
    }

    // Check for media loading periodically
    // This interval can be adjusted or replaced with a more sophisticated observer/listener for dynamic content
    var checkInterval = setInterval(checkMedia, 1000);

    // Stop checking after a reasonable timeout to avoid indefinite checking
    // Adjust the timeout as needed
    setTimeout(function() {
        clearInterval(checkInterval);
    }, 20000);
});

function adjustLayout() {
    // Adjust Footer Height
    var menuHeight = document.querySelector('.menu').offsetHeight + (window.innerHeight * 0.04);
    var footer = document.querySelector('.footer');
    if (footer) {
        footer.style.setProperty('--footer-height', menuHeight + 'px');
    }

    // Adjust Section Padding
    var bannerHeight = document.querySelector('.banner').offsetHeight + (window.innerHeight * 0.025);
    var sectionIds = ['#About-me', '#Gallery', '#Favs', '#LetsTalk'];
    sectionIds.forEach(function(id) {
        var section = document.querySelector(id);
        if (section) {
            section.style.paddingTop = bannerHeight + 'px';
        }
    });
}

// Run the function on load and on resize
window.onload = adjustLayout;
window.onresize = adjustLayout;


   </script>


